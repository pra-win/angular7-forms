import { Injectable } from '@angular/core';
import { HttpClient } from '@angular/common/http';
import { Observable, of } from 'rxjs';

interface CategoriesObj {
    [index: number]: { cid: number; cname: string; type: string };
}

interface ResObj {
  message: string,
  success: boolean,
  response: CategoriesObj
}



@Injectable({
  providedIn: 'root'
})
export class CategoriesService {

  categoryList:CategoriesObj;

  constructor(private http: HttpClient) { }

  fetchCategories() {
    this.http.get<ResObj>('/testApi/categories.php')
      .subscribe(data => {
        this.categoryList = data.response;
      });
  }

  getCategories() {
    return this.http.get<ResObj>('/testApi/categories.php');
  }
}
